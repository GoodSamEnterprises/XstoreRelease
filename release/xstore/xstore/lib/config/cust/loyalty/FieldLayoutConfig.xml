<?xml version="1.0" encoding="UTF-8"?>
<FieldLayoutSet xmlns="http://micros.com/xstore/config/form/fieldlayout" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="FieldLayoutConfig.xsd">

  <FieldLayout name="custDashboradCustInfo" type="SimpleLayout">
    <Row>
      <Column fieldRef="loyaltyNumberLabel" horizontalAlignment="Right" />
      <Column fieldRef="loyaltyNumberValueLabel" />
    </Row>
    <Row>
      <Column fieldRef="birthDateLabel" horizontalAlignment="Right" />
      <Column fieldRef="birthDateValueLabel" />
    </Row>
    <Row>
      <Column fieldRef="customerLastPurchaseDateLabel" horizontalAlignment="Right" />
      <Column fieldRef="customerLastPurchaseDate" />
    </Row>
    <Row>
      <Column fieldRef="address1Label" horizontalAlignment="Right" verticalAlignment="Top" />
      <Column fieldRef="customerPrimaryAddress" />
    </Row>
    <Row>
      <Column fieldRef="emailAddressLabel" horizontalAlignment="Right" />
      <Column fieldRef="emailAddressValueLabel" />
    </Row>
    <Row>
      <Column fieldRef="telephoneLabel" horizontalAlignment="Right" />
      <Column fieldRef="telephone1ValueLabel" />
    </Row>
  </FieldLayout>
  
  <FieldLayout name="custLoyaltyAwardsLayout" type="ListLayout">
    <Row>
      <Column start="0" width="100" fieldRef="customerAwardHistoryLabel" />
    </Row>
    <Row fill="true">
      <Column start="0" width="100" fieldRef="customerAwardHistoryList" />
    </Row>
  </FieldLayout>
  
  <FieldLayout name="custLoyaltyCardSummaryLayout" type="ListLayout">
    <Row>
      <Column start="0" width="100" fieldRef="customerLoyaltyAndAwardsLabel" />
    </Row>
    <Row fill="true">
      <Column start="0" width="100" fieldRef="customerLoyaltyCardSummary" />
    </Row>
  </FieldLayout>
  
    <FieldLayout name="customerSearchLayout" type="SimpleLayout">
    <Row>
      <Column fieldRef="telephoneLabel" horizontalAlignment="Right"/>
      <Column fieldRef="telephoneSearch" />
    </Row>
    <Row>
      <Column fieldRef="lastNameLabel" horizontalAlignment="Right"/>
      <Column fieldRef="lastName" />
    </Row>
    <Row>
      <Column fieldRef="firstNameLabel" horizontalAlignment="Right"/>
      <Column fieldRef="firstName" />
    </Row>
    <Row>
      <Column fieldRef="cityLabel" horizontalAlignment="Right"/>
      <Column fieldRef="city" />
    </Row>
    <Row>
      <Column fieldRef="stateLabel" horizontalAlignment="Right"/>
      <Column fieldRef="state" />
    </Row>
    <Row>   
      <Column />   
      <Column fieldRef="country" horizontalAlignment="Right" />      
    </Row>
    <Row>
      <Column fieldRef="postalCodeLabel" horizontalAlignment="Right"/>
      <Column fieldRef="postalCode" refreshOnChange="true"/>
    </Row>
    <Row>
      <Column fieldRef="loyaltyNumberLabel" horizontalAlignment="Right"/>
      <Column fieldRef="loyaltyNumber" />
    </Row>
    <Row>
      <Column fieldRef="customerIdInputLabel" horizontalAlignment="Right"/>
      <Column fieldRef="customerIdInput" />
    </Row>
    <Row>
      <Column fieldRef="countyLabel" visibilityGroup="countyVisibility" horizontalAlignment="Right"/>
      <Column fieldRef="county" visibilityGroup="countyVisibility" />
    </Row>
  </FieldLayout>

</FieldLayoutSet>