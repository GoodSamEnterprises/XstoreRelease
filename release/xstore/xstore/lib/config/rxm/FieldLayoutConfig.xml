<?xml version="1.0" encoding="UTF-8"?>
<FieldLayoutSet xmlns="http://micros.com/xstore/config/form/fieldlayout" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="FieldLayoutConfig.xsd">
  
  <FieldLayout name="custDigitalCartList" type="ListLayout">
    <Row>
      <Column start="0" width="100" fieldRef="custDigitalCartLabel" horizontalAlignment="Left" fontRef="complexFormLargeFont" />
    </Row>
    <Row fill="true">
      <Column start="0" width="100" fieldRef="custDigitalCart" />
    </Row>
  </FieldLayout>
  
  <FieldLayout name="custDigitalCartItemImage" type="ListLayout">
    <Row fill="true">
      <Column start="0" width="100" fieldRef="custDigitalCartItemImage" horizontalAlignment="Left"  />
    </Row>
  </FieldLayout>
  
  <FieldLayout name="custDigitalCartItemInfo" type="SimpleLayout">
    <Row>
      <Column fieldRef="custItemInfoLabel" />
      <Column />
    </Row>
    <Row>
      <Column fieldRef="priceColonLabel" horizontalAlignment="Right" />
      <Column fieldRef="custItemPrice" />
    </Row>
    <Row>
      <Column fieldRef="digitalCartItemStyleLabel" horizontalAlignment="Right" fontRef="formDiminishedFont" />
      <Column fieldRef="digitalCartItemStyle" />
    </Row>
    <Row>
      <Column fieldRef="digitalCartDimension1Label" horizontalAlignment="Right" fontRef="formDiminishedFont" />
      <Column fieldRef="digitalCartDimension1" />
    </Row>
    <Row>
      <Column fieldRef="digitalCartDimension2Label" horizontalAlignment="Right" fontRef="formDiminishedFont" />
      <Column fieldRef="digitalCartDimension2" />
    </Row>
    <Row>
      <Column fieldRef="digitalCartDimension3Label" horizontalAlignment="Right" fontRef="formDiminishedFont" />
      <Column fieldRef="digitalCartDimension3" />
    </Row>
  </FieldLayout>
</FieldLayoutSet>