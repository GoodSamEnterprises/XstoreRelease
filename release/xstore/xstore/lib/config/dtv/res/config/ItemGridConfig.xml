<?xml version="1.0" encoding="UTF-8"?>
<!--
Configuration for the item grid available in item inquiry.
-->
<ItemGridSet dtype="ItemGridSetConfig" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ItemGridConfig.xsd">
  <ItemGrid dtype="ItemGridConfig">
    <StyleId dtype="String">DEFAULT</StyleId>
    <RowDimension dtype="String">SIZE</RowDimension>
    <ColumnDimension dtype="String">WIDTH</ColumnDimension>
    <PageDimension dtype="String">COLOR</PageDimension>
    <RowLabel dtype="Translatable">_size</RowLabel>
    <ColumnLabel dtype="Translatable">_width</ColumnLabel>
    <PageLabel dtype="Translatable">_color</PageLabel>
  </ItemGrid>
  <ItemGrid dtype="ItemGridConfig">
    <StyleId dtype="String">1000</StyleId>
    <RowDimension dtype="String">SHOE SIZE</RowDimension>
    <ColumnDimension dtype="String">SHOE WIDTH</ColumnDimension>
    <PageDimension dtype="String">SHOE COLOR</PageDimension>
    <RowLabel dtype="Translatable">_sizes</RowLabel>
    <ColumnLabel dtype="Translatable">_widths</ColumnLabel>
    <PageLabel dtype="Translatable">_color</PageLabel>
  </ItemGrid>
</ItemGridSet>
